!!! 5
%html{ :lang => "en-US", "xml:lang" => "en-US", :xmlns => "http://www.w3.org/1999/xhtml" }
	%head
		%meta{ 'http-equiv' => "content-type", :content => "text/html; charset=utf-8" }
		%meta{ :name => "Author", :content => "Order Frozen Seafood, LLC" }
		%meta{ :name => "viewport", :content => "width=1024" }
		%title= 'Order Frozen Seafood: ' + @title ||= "Thanks for Visiting!"
		%meta{ :name => "Keywords", :content => @keywords ||= "Order Frozen Seafood" }
		%meta{ :name => "Description", :content => @description ||= "Order Premium Frozen Seafood to your door daily"}
		= stylesheet_link_tag :all
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body
		#container
			= yield
